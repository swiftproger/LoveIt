<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">
  <channel>
    <title>{{ .Site.Title }}</title>
    <link>{{ .Site.BaseURL }}</link>
    <description>{{ .Site.Params.description }}</description>
    {{ range .Pages }}
      <item turbo="true">
        <title>{{ .Title }}</title>
        <link>{{ .Permalink }}</link>
        <description>{{ .Summary }}</description>
        <turbo:content><![CDATA[
          {{ .Content }}
        ]]></turbo:content>
      </item>
    {{ end }}
  </channel>
</rss>
